<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_goneMarginTop="2dp"
    app:layout_goneMarginBottom="2dp">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

       >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_view_proceso_id_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txt_view_proceso_ut_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UT:"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txt_view_proceso_ti_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TI:"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txt_view_proceso_es_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E/S:"
                android:layout_weight="1"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_view_proceso_salida_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salida:"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txt_view_proceso_carga_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carga:"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txt_view_proceso_tbloq_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T Bloqueado:"
                android:layout_weight="1"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>






</RelativeLayout>